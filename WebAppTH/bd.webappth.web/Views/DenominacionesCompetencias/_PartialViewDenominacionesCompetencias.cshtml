@model bd.webappth.entidades.Negocio.DenominacionCompetencia

<fieldset>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-prepend fa fa-comment"></i>
                <input maxlength="32" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </label>
        </section>

        <section class="col col-4">
            <label class="checkbox">
                <input type="checkbox" asp-for="CompetenciaTecnica" class="form-control">
                <i></i>Es competencia tecnica ?
                <span asp-validation-for="CompetenciaTecnica" class="text-danger"></span>
            </label>
        </section>
    </div>
    <section>
        <label class="label"></label>
        <label class="textarea">
            <i class="icon-append fa fa-comment"></i>
            <textarea maxlength="1000" asp-for="Definicion" rows="5" placeholder="@Html.DisplayNameFor(model=>model.Definicion)"></textarea>
            <span asp-validation-for="Definicion" class="text-danger"></span>
        </label>
    </section>
</fieldset>


