@model List<bd.webappth.entidades.Negocio.AccionPersonal>

@{
    ViewData["Title"] = "Index";
}
<!-- MAIN CONTENT -->
<div id="content">

    <p></p>
    <a asp-action="Create">
        <button type="button" asp-action="Create" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nueva Acci&oacute;n de personal

        </button>
    </a>
    <p> </p>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Actividades Esenciales</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.Persona.Nombres)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().TipoAccionPersonal.Descripcion)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaRige)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().FechaRigeHasta)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().NoDias)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Solicitud)
                                        </th>
                                       
                                        <th>
                                            <i class="fa fa-cog "></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empleado.Persona.Nombres)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoAccionPersonal.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaRige)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaRigeHasta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NoDias)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Solicitud)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdAccionPersonal }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAccionPersonal}, new { onclick = "return confirm('Desea eliminar Actividad Esencial... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

