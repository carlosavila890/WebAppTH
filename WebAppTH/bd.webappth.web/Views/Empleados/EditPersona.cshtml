@model bd.webappth.entidades.ViewModels.EmpleadoViewModel

@{
    ViewData["Title"] = "Editar Persona";
}

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />

<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Persona</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="EditPersona" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Persona.IdPersona" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdSexo" class="form-control" asp-items="ViewBag.IdSexo">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdSexo)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdSexo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdTipoIdentificacion" class="form-control" asp-items="ViewBag.IdTipoIdentificacion">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdTipoIdentificacion)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdTipoIdentificacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdEstadoCivil" class="form-control" asp-items="ViewBag.IdEstadoCivil">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdEstadoCivil)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdEstadoCivil" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdGenero" class="form-control" asp-items="ViewBag.IdGenero">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdGenero)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdGenero" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdNacionalidad" class="form-control" asp-items="ViewBag.IdNacionalidad">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdNacionalidad)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdNacionalidad" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdTipoSangre" class="form-control" asp-items="ViewBag.IdTipoSangre">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdTipoSangre)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdTipoSangre" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdEtnia" class="form-control" asp-items="ViewBag.IdEtnia">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdEtnia)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdEtnia" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdNacionalidadIndigena" class="form-control" asp-items="ViewBag.IdNacionalidadIndigena">
