                                                <span asp-validation-for="Persona.TelefonoCasa" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>


                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.CorreoPrivado" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.CorreoPrivado)" />
                                                <span asp-validation-for="Persona.CorreoPrivado" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>


                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.LugarTrabajo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.LugarTrabajo)" />
                                                <span asp-validation-for="Persona.LugarTrabajo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>


                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.LugarTrabajo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.LugarTrabajo)" />
                                                <span asp-validation-for="Persona.LugarTrabajo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>


                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.CallePrincipal" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.CallePrincipal)" />
                                                <span asp-validation-for="Persona.CallePrincipal" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>


                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.CalleSecundaria" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.CalleSecundaria)" />
                                                <span asp-validation-for="Persona.CalleSecundaria" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.Referencia" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.Referencia)" />
                                                <span asp-validation-for="Persona.Referencia" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>



                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.Numero" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.Numero)" />
                                                <span asp-validation-for="Persona.Numero" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.Ocupacion" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.Ocupacion)" />
                                                <span asp-validation-for="Persona.Ocupacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->

</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script type="text/javascript">
        <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
            $(document).ready(function () {
                Init_Select2();
    });

    </script>
}
