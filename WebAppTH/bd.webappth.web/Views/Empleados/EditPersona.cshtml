                                                </select>
                                                <span asp-validation-for="Persona.IdNacionalidadIndigena" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="Persona.IdParroquia" class="form-control" asp-items="ViewBag.IdParroquia">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.Persona.IdParroquia)></option>
                                                </select>
                                                <span asp-validation-for="Persona.IdParroquia" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input asp-for="Persona.FechaNacimiento" type="text" class="form-control input datepicker " placeholder="Seleccione la Fecha de Inicio" data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                                <span asp-validation-for="Persona.FechaNacimiento" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.Identificacion" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.Identificacion)" />
                                                <span asp-validation-for="Persona.Identificacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.Nombres" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.Nombres)" />
                                                <span asp-validation-for="Persona.Nombres" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.Apellidos" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.Apellidos)" />
                                                <span asp-validation-for="Persona.Apellidos" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>


                                    <div class="row">
                                        <section class="col col-8">
                                            <label class="input">
                                                <i class="icon-append fa fa-comment"></i>
                                                <input maxlength="20" asp-for="Persona.TelefonoPrivado" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Persona.TelefonoPrivado)" />
