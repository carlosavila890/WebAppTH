@model List<bd.webappth.entidades.Negocio.Indicador>

@{
    ViewData["Title"] = "Index";
}
<p></p>
<a asp-action="Create">
    <button type="button" asp-action="Create" class="btn btn-labeled btn-default">
        <span class="btn-label">
            <i class="glyphicon glyphicon-plus"></i>
        </span>Nuevo Indicador

    </button>
</a>
<p> </p>
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Indicador</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                           
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.IdIndicador }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdIndicador }, new { onclick = "return confirm('Desea eliminar el indicador... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
 @section Scripts {
   <script src='~/js/datatables/init.js'></script>
}

