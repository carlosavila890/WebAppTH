@model bd.webappth.entidades.Negocio.CapacitacionProveedor

@{
    ViewData["Title"] = "CapacitacionesProveedores";
}


			<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-10">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
               
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Capacitaciones Proveedores</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                           
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                          
                            <form  asp-action="Create" id="checkout-form"  class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="32" asp-for="Nombre" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Nombre)" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="32" asp-for="Telefono" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Telefono)" />
                                                <span asp-validation-for="Telefono" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label class="input">
                                                <select asp-for="IdCapacitacionRecibida" class="form-control" asp-items="ViewBag.IdCapacitacionRecibida">
                                                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.IdCapacitacionRecibida)></option>
                                                </select>
                                                <span asp-validation-for="IdCapacitacionRecibida" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <section>
                                        <label class="label"></label>
                                        <label class="textarea">
                                            <i class="icon-append fa fa-comment"></i>
                                            <textarea maxlength="50" asp-for="Direccion" rows="2" placeholder="@Html.DisplayNameFor(model=>model.Direccion)"></textarea>
                                            <span asp-validation-for="Direccion" class="text-danger"></span>
                                        </label>
                                    </section>
                                    
                                </fieldset>
                               
                                <footer>
                                    @*<span class="text-danger">@ViewData["Error"]</span>*@
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index"  class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
       
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->
   
</div>
<!-- END MAIN CONTENT -->
@section Scripts {
    <script type="text/javascript">


    </script>
}
