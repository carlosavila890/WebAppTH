    <div class="row">
        <section class="col col-8">
            <label class="checkbox">
                <label>&iquest; Modifica Distributivo ?</label>
                <input type="checkbox" asp-for="TipoAccionPersonal.ModificaDistributivo" class="form-control" />
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <select asp-for="IdEstadoTipoAccionPersonal" class="form-control" asp-items="ViewBag.IdEstadoTipoAccionPersonal">
                    <option id="0"><Seleccione una @Html.DisplayNameFor(model => model.TipoAccionPersonal.IdEstadoTipoAccionPersonal)></option>
                </select>
                <span asp-validation-for="IdEstadoTipoAccionPersonal" class="text-danger"></span>
            </label>
        </section>
    </div>

</fieldset>