        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="checkbox">
                <label>&iquest; Proceso  N&oacutemina ?</label>
                <input type="checkbox" asp-for="TipoAccionPersonal.ProcesoNomina" class="form-control" />
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <select asp-for="TipoAccionPersonal.Matriz" class="form-control" asp-items="ViewBag.IdMatriz">
                    <option id="0">< Seleccione una Matriz ></option>
                </select>
                <span asp-validation-for="IdMatriz" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="textarea">
                <i class="icon-append fa fa-comment"></i>
                <textarea maxlength="50" asp-for="TipoAccionPersonal.Descripcion" rows="2" placeholder="@Html.DisplayNameFor(model=>model.TipoAccionPersonal.Descripcion)"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </label>
        </section>
    </div>

    <div class="row">
        <section class="col col-8">
            <label class="checkbox">
