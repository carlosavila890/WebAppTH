    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <input maxlength="20" asp-for="NDiasMinimo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.TipoAccionPersonal.NDiasMinimo)" />
                <span asp-validation-for="NDiasMinimo" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <input maxlength="20" asp-for="NDiasMaximo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.TipoAccionPersonal.NDiasMaximo)" />
                <span asp-validation-for="NDiasMaximo" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <input maxlength="20" asp-for="NHorasMinimo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.TipoAccionPersonal.NHorasMinimo)" />
                <span asp-validation-for="NHorasMinimo" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">
                <i class="icon-append fa fa-comment"></i>
                <input maxlength="20" asp-for="NHorasMaximo" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.TipoAccionPersonal.NHorasMaximo)" />
                <span asp-validation-for="NHorasMaximo" class="text-danger"></span>
            </label>
        </section>
    </div>
  
    <div class="row">
        <section class="col col-8">
            <label class="checkbox">
                <label>&iquest; D&iacuteas  H&aacutebiles ?</label>
                <input type="checkbox" asp-for="TipoAccionPersonal.DiasHabiles" class="form-control" />
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="checkbox">
                <label>&iquest; Imputable Vacaciones ?</label>
                <input type="checkbox" asp-for="TipoAccionPersonal.ImputableVacaciones" class="form-control" />
