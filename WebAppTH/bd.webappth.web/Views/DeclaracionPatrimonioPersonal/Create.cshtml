@model bd.webappth.entidades.ViewModels.ViewModelDeclaracionPatrimonioPersonal

@{
    ViewData["Title"] = "ViewModelDeclaracionPatrimonioPersonal";
}


<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
