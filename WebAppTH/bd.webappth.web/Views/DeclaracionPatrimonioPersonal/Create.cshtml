                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="32" asp-for="OtroIngreso.IngresoArriendos" class="form-control montoOtrosIngresos" onkeypress="return NumCheck(event, this)" onkeyup="sumarOtrosIngresos();"   />
