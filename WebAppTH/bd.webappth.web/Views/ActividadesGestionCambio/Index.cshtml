@model bd.webappth.entidades.ViewModels.ActividadesGestionCambioViewModel

@{
    ViewData["Title"] = "Index";

}

<p></p>


    @Html.ActionLink("Nueva Actividad de Gestion de Cambio", "Create", "ActividadesGestionCambio", new { IdPlanGestionCambio = Model.IdPlanGestionCambio }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Regresar a Plan de Gestion de Cambio", "Index", "PlanesGestionCambio", new { IdPlanGestionCambio = Model.IdPlanGestionCambio }, new { @class = "btn btn-primary" })

<p> </p>
			<!-- MAIN CONTENT -->
<div id="content">
   
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Actividades de Gesti&oacuten de Cambio</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                               
                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                    <thead>
                                        <tr>
                                            <th data-class="expand">
                                                @Html.DisplayNameFor(model => model.ListaActividadesGestionCambio.FirstOrDefault().FechaInicio)
                                            </th>
                                            <th data-hide="phone">
                                                @Html.DisplayNameFor(model => model.ListaActividadesGestionCambio.FirstOrDefault().FechaFin)
                                            </th>
                                            <th data-hide="phone">
                                                @Html.DisplayNameFor(model => model.ListaActividadesGestionCambio.FirstOrDefault().Descripcion)
                                            </th>
                                            <th data-class="expand">
                                                @Html.DisplayNameFor(model => model.ListaActividadesGestionCambio.FirstOrDefault().Indicador)
                                            </th>
                                           
                                            <th data-hide="phone">
                                                Suma Indicador Real
                                            </th>
                                            <th data-hide="phone">
                                                @Html.DisplayNameFor(model => model.ListaActividadesGestionCambio.FirstOrDefault().Porcentaje)
                                            </th>
                                            <th>Opciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ListaActividadesGestionCambio)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaInicio)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FechaFin)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Indicador)
                                                </td>
                                               
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Suma)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Porcentaje)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdActividadesGestionCambio }) |
                                                    @Html.ActionLink("Detalle", "Index", "AvancesGestionCambio", new { idActividadesGestionCambio = item.IdActividadesGestionCambio })|
                                                    @Html.ActionLink("Eliminar", "Delete", new { IdActividadesGestionCambio = item.IdActividadesGestionCambio, IdPlanGestionCambio = item.IdPlanGestionCambio }, new { onclick = "return confirm('Desea eliminar la actividad de gestion de cambio... ?');" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
          
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

 @section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

