@model bd.webappth.entidades.Negocio.ActividadesGestionCambio
<fieldset>
   
    <div class="row">
        <section class="col col-8">
            <label class="input">@Html.DisplayNameFor(model => model.FechaInicio)</label>
                <label class="input">
                    <input maxlength="20" asp-for="FechaInicio" class="datepicker" type="text" placeholder="@Html.DisplayNameFor(model=>model.FechaInicio)" data-dateformat='dd/mm/yy' />

                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">@Html.DisplayNameFor(model => model.FechaFin)</label>
            <label class="input">
                <input maxlength="20" asp-for="FechaFin" class="datepicker" type="text" placeholder="@Html.DisplayNameFor(model=>model.FechaFin)" data-dateformat='dd/mm/yy' />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </label>
        </section>
    </div>
    <div class="row">
        <section class="col col-8">
            <label class="input">@Html.DisplayNameFor(model => model.Indicador)</label>
            <label class="input">
                <input maxlength="9" asp-for="Indicador" onKeyPress="return checkIt(event)" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Indicador)" />
                <span asp-validation-for="Indicador" class="text-danger"></span>
            </label>
        </section>
    </div>
   
    <section class="col col-8">
        <label class="input">@Html.DisplayNameFor(model => model.Porciento)</label>
        <label class="checkbox">
            <input type="checkbox" asp-for="Porciento" class="form-control">
            <i></i>Es Porcentaje ?
            <span asp-validation-for="Porciento" class="text-danger"></span>
        </label>
    </section>
    <div class="row">
        <section class="col col-8">
            <label class="input">@Html.DisplayNameFor(model => model.Descripcion)</label>
            <label class="input">
                <textarea rows="3" asp-for="Descripcion" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Descripcion)"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </label>
        </section>
    </div>
    
</fieldset>