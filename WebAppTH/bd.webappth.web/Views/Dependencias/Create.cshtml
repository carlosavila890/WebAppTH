@model bd.webappth.entidades.Negocio.Dependencia

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.css" />
<script src='~/js/site.js'></script>
<script src='~/lib/waitMe/waitMe.min.js'></script>
<div id="content">
    <div class="col col-10">

        @if (@ViewData["Error"].ToString() != "")

        {

            <div class="col-lg-12">

                <div class="alert alert-block alert-dismissable">

                    <a class="close" data-dismiss="alert" href="#"><p>X</p></a>

                    <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>

                    <p>

                        <span class="text-danger"><strong><bold> @ViewData["Error"]</bold></strong></span>

                    </p>

                </div>

            </div>

        }
    </div>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Dependencias</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="Create" id="ejemplo" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <fieldset>
                                    @if (@ViewData["Error"].ToString() != "")
                                    {

                                        <div class="col-lg-12">
                                            <div class="alert alert-block  bordered">
                                                <a class="close" data-dismiss="alert" href="#"><p><strong> <bold>X</bold></strong></p></a>
                                                <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                                                <p>
                                                    <span class="text-info"><strong> <bold> @ViewData["Error"]</bold></strong></span>
                                                </p>
                                            </div>
                                        </div>
                                    }
                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Ciudad</label>
                                            <label class="input">
                                                <select asp- class="form-control" id="ciudad" asp-items="ViewBag.IdCiudad">
                                                    <option value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.Sucursal.Ciudad.Nombre)</option>
                                                </select>
                                                <span asp-validation-for="Sucursal.Ciudad.Nombre" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label>Sucursal</label>
                                            <label class="input">
                                                <select asp-for="IdSucursal" id="sucursal" asp- class="form-control">
                                                    <option value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.Sucursal.Nombre)</option>
                                                </select>
                                                <span asp-validation-for="IdSucursal" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label>Dependencia Padre</label>
                                            <label class="input">
                                                <select asp-for="IdDependenciaPadre" id="dependencia" asp- class="form-control">
                                                    <option value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.Nombre)</option>
                                                </select>
                                                <span asp-validation-for="IdDependenciaPadre" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label>Nombre</label>
                                            <label class="input">
                                                <i class="icon-prepend fa fa-user"></i>
                                                <input maxlength="50" asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label>Proceso</label>
                                            <label class="input">
                                                <select asp-for="IdProceso" asp- class="form-control" asp-items="ViewBag.IdProceso">
                                                    <option value="0" selected="" disabled="">@Html.DisplayNameFor(model => model.IdProceso)</option>
                                                </select>
                                                <span asp-validation-for="IdProceso" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {

   <script src='~/lib/select2/dist/js/select2.min.js'></script>
<script src='~/lib/select2/dist/js/i18n/es.js'></script>
<script src='~/lib/waitMe/waitMe.min.js'></script>
<script src='~/js/site.js'></script>
<script type="text/javascript">
    $(document).ready(function () {
        Init_Select2();
    });
</script>





<script type="text/javascript">
    $(document).ready(function () {


        $("#ciudad").change(function () {
            mostrarLoadingPanel("content", "Cargando...")
            $("#sucursal").empty();
            $("#dependencia").val("");
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ListarSucursalesPorCiudad", "CeseFunciones")',
                    dataType: 'json',
                    data: { idciudad: $("#ciudad").val() },
                    success: function (data) {
                        $("#sucursal").append('<option value="0" selected="" disabled="">Seleccione</option>');
                        $.each(data, function (i, data) {
                            $("#sucursal").append('<option value="'
                                + data.idSucursal + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
            })


            $("#sucursal").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#dependencia").val("");
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarDependenciasPorSucursal", "CeseFunciones")',
                    dataType: 'json',
                    data: { idsucursal: $("#sucursal").val() },
                    success: function (data) {
                        $("#dependencia").append('<option value="0" selected="" disabled="">Seleccione</option>');
                        $.each(data, function (i, data) {
                            $("#dependencia").append('<option value="'
                                + data.idDependencia + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                })
        });
</script>

}




