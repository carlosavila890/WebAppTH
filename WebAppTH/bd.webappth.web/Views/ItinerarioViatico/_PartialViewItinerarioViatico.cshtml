@model bd.webappth.entidades.Negocio.ItinerarioViatico

<div id="bootstrap-wizard-1" class="col-sm-12">
    <div class="form-bootstrapWizard">
        <ul class="bootstrapWizard form-wizard"></ul>
        <div class="clearfix"></div>
    </div>

    <div class="tab-content">
        <div id="camposEmpleado">
            <div class="tab-pane active" id="tab1">
                <br>
                <div class="row">
                    <article class="col-lg-12">
                        <legend>Itinerario</legend>
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Tipo de transporte:</label>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bank fa  fa-fw"></i></span>
                                        <select id="IdTipoTransporte" asp-for="IdTipoTransporte" class="form-control input " asp-items="ViewBag.IdTipoTransporte" data-msg-required='El campo es requerido' data-rule-required='true'>
                                            <option value="0" selected="" disabled="">Seleccione</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Fecha de salida:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input id="FechaSalida" asp-for="FechaDesde" type="text" class="form-control input datepicker " placeholder="Fecha de llegada: " data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <span asp-validation-for="FechaDesde" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Hora de salida:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                                        <input type="time" asp-for="HoraSalida" class="form-control input  " data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <span asp-validation-for="HoraSalida" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Fecha de llegada:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        <input id="FechaLlegada" asp-for="FechaHasta" type="text" class="form-control input datepicker " placeholder="Fecha de llegada: " data-dateformat='dd/mm/yy' data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <span asp-validation-for="FechaHasta" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Hora de salida:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                                        <input type="time" asp-for="HoraLlegada" class="form-control input  " data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <span asp-validation-for="HoraLlegada" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label>Valor:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa  fa-fw"></i></span>
                                        <input id="Valor" asp-for="Valor" class="form-control input " placeholder="Valor" type="text" data-msg-required='El campo es requerido' data-rule-required='true'>
                                        <span asp-validation-for="Valor" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <section>
                            <label class="label"></label>
                            <div class="form-group">
                                <label>Ruta:</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icon-append fa fa-comment"></i></span>
                                    <textarea maxlength="250" asp-for="Descripcion" class="form-control" id="Ruta" rows="3" placeholder="Ruta"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </section>
                    </article>
                </div>
            </div>
            <br />

        </div>
    </div>
    <span class="text-danger">@ViewData["Error"]</span>
</div>