@model List<bd.webappth.entidades.Negocio.TrayectoriaLaboral>

@{await Html.RenderPartialAsync("_PartialViewMenu");}

<!-- MAIN CONTENT -->
<div id="content">

    <p></p>
    <a asp-action="CreateTrayectoriaLaboral">
        <button type="button" asp-action="CreateTrayectoriaLaboral" asp-controller="FichaEmpleado" class="btn btn-labeled btn-default">
            <span class="btn-label">
                <i class="glyphicon glyphicon-plus"></i>
            </span>Nueva Trayectoria Laboral

        </button>
    </a>
    <p> </p>

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Trayectoria Laboral</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            Fecha Inicio
                                        </th>
                                        <th data-class="">
                                            Fecha Fin
                                        </th>
                                        <th data-class="">
                                            Empresa
                                        </th>
                                        <th data-class="">
                                            Puesto Trabajo
                                        </th>
                                        <th data-class="">
                                            Descripci&oacute;n
                                        </th>
                                        <th>
                                            <i class="fa fa-cog "></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaInicio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaFin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Empresa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PuestoTrabajo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DescripcionFunciones)
                                        </td>
                                        <td>

                                            @Html.ActionLink("Editar", "EditTrayectoriaLaboral", new { id = item.IdTrayectoriaLaboral }) |
                                            @Html.ActionLink("Eliminar", "DeleteTrayectoriaLaboral", new { id = item.IdTrayectoriaLaboral }, new { onclick = "return confirm('Desea eliminar la Trayectoria Laboral... ?');" })

                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}


