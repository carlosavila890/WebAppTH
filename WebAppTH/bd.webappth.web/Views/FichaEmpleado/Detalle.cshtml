@section Scripts {
    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="~/js/plugin/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
    <script src="~/js/plugin/fuelux/wizard/wizard.min.js"></script>

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $("#IdEtnia").change(function () {

            mostrarLoadingPanel("content", "Cargando...");
            $("#IdNacionalidadIndigena").empty();
             Init_Select2()
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ListarNacionalidadIndigena","Empleados")',
                    dataType: 'json',
                    data: { etnia: $("#IdEtnia").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#IdNacionalidadIndigena").append('<option value="'
                                + data.idNacionalidadIndigena + '">'
                                + data.nombre + '</option>');
                            Init_Select2()
                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
        })

        $("#IdPaisLugarNacimiento").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#IdCiudadLugarNacimiento").empty();
            Init_Select2()
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarCiudadesPorPais", "Empleados")',
                    dataType: 'json',
                    data: { pais: $("#IdPaisLugarNacimiento").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#IdCiudadLugarNacimiento").append('<option value="'
                                + data.idCiudad + '">'
                                + data.nombre + '</option>');
                            Init_Select2()
                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
        })

        $("#IdPaisLugarSufragio").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#IdProvinciaLugarSufragio").empty();
            Init_Select2()
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarProvinciaPorPais", "Empleados")',
                    dataType: 'json',
                    data: { pais: $("#IdPaisLugarSufragio").val() },
                    success: function (data) {
                        $.each(data, function (i, data) {
                            $("#IdProvinciaLugarSufragio").append('<option value="'
                                + data.idProvincia + '">'
                                + data.nombre + '</option>');
                            Init_Select2()

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
        })

        $("#IdPaisLugarPersona").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#IdProvinciaLugarPersona").empty();
            $("#IdCiudadLugarPersona").empty();
            $("#IdParroquia").empty();
            Init_Select2()
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarProvinciaPorPais","Empleados")',
                    dataType: 'json',
                    data: { pais: $("#IdPaisLugarPersona").val() },
                    success: function (data) {
                        $("#IdProvinciaLugarPersona").append('<option value="0" selected="selected" disabled="">Seleccione</option>');
                        $.each(data, function (i, data) {
                            $("#IdProvinciaLugarPersona").append('<option value="'
                                + data.idProvincia + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                })

        $("#IdProvinciaLugarPersona").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#IdCiudadLugarPersona").empty();
            $("#IdParroquia").empty();
            Init_Select2()
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarCiudadPorProvincia", "Empleados")',
                    dataType: 'json',
                    data: { provincia: $("#IdProvinciaLugarPersona").val() },
                    success: function (data) {
                        $("#IdCiudadLugarPersona").append('<option value="0" selected="selected" disabled="">Seleccione</option>');
                        $.each(data, function (i, data) {
                            $("#IdCiudadLugarPersona").append('<option value="'
                                + data.idCiudad + '">'
                                + data.nombre + '</option>');

                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                })


        $("#IdCiudadLugarPersona").change(function () {
            mostrarLoadingPanel("content","Cargando...")
            $("#IdParroquia").empty();
            Init_Select2()
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListarParroquiaPorCiudad", "Empleados")',
                    dataType: 'json',
                    data: { idCiudad: $("#IdCiudadLugarPersona").val() },
                    success: function (data) {
                        $("#IdParroquia").append('<option value="0" selected="selected" disabled="">Seleccione</option>');
                        $.each(data, function (i, data) {
                            $("#IdParroquia").append('<option value="'
                                + data.idParroquia + '">'
                                + data.nombre + '</option>');
                            Init_Select2()
                        });
                    }, complete: function (data) {
                        $("#content").waitMe("hide");
                    },

                    error: function (ex) {
                        alert('Failed to retrieve data.' + ex);
                    }
                });
                return false;
                   })
        });

        function cargando() {
            mostrarLoadingPanel("content", "")
        }


    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>



