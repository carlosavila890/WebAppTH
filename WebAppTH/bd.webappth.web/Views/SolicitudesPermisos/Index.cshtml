@model List<bd.webappth.entidades.Negocio.SolicitudPermiso>

@{
    ViewData["Title"] = "Index";
}

<p></p>
<a asp-action="PedirPermiso">
    <button type="button" asp-action="PedirPermiso" class="btn btn-labeled btn-default">
        <span class="btn-label">
            <i class="glyphicon glyphicon-plus"></i>
        </span>Nueva Solicitud Permiso

    </button>
</a>
<p> </p>
<a asp-action="RevisaPermisos">
    <button type="button" asp-action="RevisaPermisos" class="btn btn-labeled btn-default">
        <span class="btn-label">
            <i class="glyphicon glyphicon-plus"></i>
        </span>Revisar Permiso

    </button>
</a>
			<!-- MAIN CONTENT -->
<div id="content">
   
    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Solicitud Permiso</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Empleado.Persona.Nombres)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Motivo)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().TipoPermiso.Nombre)
                                        </th>
                                        <th data-hide="phone">
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Estado)
                                        </th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empleado.Persona.Nombres)
                                                @Html.DisplayFor(modelItem => item.Empleado.Persona.Apellidos)
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.Motivo)
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.TipoPermiso.Nombre)
                                            </td>
                                            <td>

                                                @if (item.Estado==0)
                                                {
                                                    <p>Devuelto</p>
                                                }

                                                @if (item.Estado == 1)
                                                {
                                                    <p>Aprobado</p>
                                                }

                                                @if (item.Estado == -1)
                                                {
                                                    <p>Denegado</p>
                                                }
                                                
                                            </td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
          
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

 @section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

