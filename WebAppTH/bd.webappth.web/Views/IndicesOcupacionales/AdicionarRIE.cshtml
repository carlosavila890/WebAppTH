@model bd.webappth.entidades.ViewModels.IndiceOcupacionalRIEView

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />

<div class="widget-body no-padding">
    <form asp-action="AdicionarRIE" asp-controller="IndicesOcupacionales" method="post" id="adicionar" class="smart-form" novalidate="novalidate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdIndiceOcupacional" />
        <fieldset>
            }
            <div>
                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->
                </div>
                <!-- end widget edit box -->
                <!-- widget content -->
                <div class="widget-body no-padding">
                    <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th data-hide="phone">
                                    Nombre
                                </th>

                                <th data-hide="phone">
                                    Descripci&oacuten
                                </th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListaRelacionesInternasExternas)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>

                                    <td>
                                        <input type="submit" asp-route-idRIE="@item.IdRelacionesInternasExternas" value="Guardar" class="btn btn-primary" />

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- end widget content -->
            </div>

        </fieldset>
    </form>
</div>

@section Scripts {

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>
}