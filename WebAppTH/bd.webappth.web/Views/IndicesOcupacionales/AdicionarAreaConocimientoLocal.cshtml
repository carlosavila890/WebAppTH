
@model bd.webappth.entidades.Negocio.IndiceOcupacionalAreaConocimiento

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />

<div class="widget-body no-padding">
    <form asp-action="AdicionarAreaConocimientoLocal" id="adicionar" class="smart-form" novalidate="novalidate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdIndiceOcupacional" />
        <fieldset>
            <div class="row">
                <section class="col col-6">
                    <label class="input">
                        <select asp-for="IdAreaConocimiento" asp- class="form-control" asp-items="ViewBag.IdAreaConocimiento"></select>
                        <span asp-validation-for="IdAreaConocimiento" class="text-danger"></span>
                    </label>
                </section>
            </div>
        </fieldset>
        <footer>
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Detalles" asp-route-id="@Model.IdIndiceOcupacional" class="btn btn-default">Cancelar</a>
        </footer>
    </form>
</div>

@section Scripts {

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
    $(document).ready(function () {
        Init_Select2();
    });
    </script>
}
