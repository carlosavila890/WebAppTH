
@model bd.webappth.entidades.Negocio.IndiceOcupacionalConocimientosAdicionales

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />

<div class="widget-body no-padding">
    <form asp-action="AdicionarConocimientoAdicional" id="adicionar" class="smart-form" novalidate="novalidate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdIndiceOcupacional" />
        <fieldset>
            @if (@ViewData["Error"].ToString() != "")
                                    {

                <div class="col-lg-12">
                    <div class="alert alert-block  bordered">
                        <a class="close" data-dismiss="alert" href="#"><p><strong> <bold>X</bold></strong></p></a>
                        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i>Informaci&oacute;n!</h4>
                        <p>
                            <span class="text-info"><strong> <bold> @ViewData["Error"]</bold></strong></span>
                        </p>
                    </div>
                </div>
                                    }
            <div class="row">
                <section class="col col-6">
                    <label class="input">
                        <select asp-for="IdConocimientosAdicionales" asp- class="form-control" asp-items="ViewBag.IdConocimientosAdicionales"></select>
                        <span asp-validation-for="IdConocimientosAdicionales" class="text-danger"></span>
                    </label>
                </section>
            </div>
        </fieldset>
        <footer>
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <a asp-action="Detalles" asp-route-id="@Model.IdIndiceOcupacional" class="btn btn-default">Cancelar</a>
        </footer>
    </form>
</div>

@section Scripts {

    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
    $(document).ready(function () {
        Init_Select2();
    });
    </script>
}