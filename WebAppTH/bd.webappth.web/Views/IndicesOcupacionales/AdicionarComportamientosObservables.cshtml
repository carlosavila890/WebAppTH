
@model bd.webappth.entidades.ViewModels.IndiceOcupacionalComportamientoObservableView
<div id="content">
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Estados Civiles</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <div class="widget-body no-padding">
                                <form asp-action="AdicionarComportamientosObservables" asp-controller="IndicesOcupacionales" method="post" id="adicionar" class="smart-form" novalidate="novalidate">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="IdIndiceOcupacional" />
                                    <fieldset>
                                        <div class="row">
                                            <section class="col col-6">
                                                <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th data-hide="phone">
                                                                @Html.DisplayNameFor(model => model.ComportamientoObservables.FirstOrDefault().Descripcion)
                                                            </th>
                                                            <th data-hide="phone">
                                                                @Html.DisplayNameFor(model => model.ComportamientoObservables.FirstOrDefault().Nivel.Nombre)
                                                            </th>
                                                            <th data-hide="phone">
                                                                @Html.DisplayNameFor(model => model.ComportamientoObservables.FirstOrDefault().DenominacionCompetencia.Nombre)
                                                            </th>
                                                            <th data-hide="phone">
                                                                @Html.DisplayNameFor(model => model.ComportamientoObservables.FirstOrDefault().DenominacionCompetencia.CompetenciaTecnica)
                                                            </th>
                                                            <th>Opciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.ComportamientoObservables)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Nivel.Nombre)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.DenominacionCompetencia.Nombre)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.DenominacionCompetencia.CompetenciaTecnica)
                                                                </td>

                                                                <td>
                                                                    <input type="submit" asp-route-idComportamientoObservable="@item.IdComportamientoObservable" value="Guardar" class="btn btn-primary" />
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>


                                            </section>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>

            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>

@section scripts {

    <script src='~/js/datatables/init.js'></script>
}

